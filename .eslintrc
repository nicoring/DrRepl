{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-boolean-value": 0,

    "semi": [1, "never"],
    "no-var": 0,
    "vars-on-top": 0,
    "comma-dangle": 0,
    "no-use-before-define": 0,
    "object-shorthand": 1
  },
  "plugins": [
    "react"
  ]
}
